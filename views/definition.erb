<h2> Word: <%= @word.word %></h2>
<h4> Definition: <%= @definition.definition %> </h4>

<hr>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
  <div class="form-group">
    <label for="definition">Enter new definition:</label>
    <input id="definition" name="definition" type="text" class="form-control">
  </div>
  <br>
  <button type="submit" class="btn-primary">Redefine</button>
</form>

<form action="/words/<%= @word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn-warning mt-2 mb-2">Delete definition</button>
</form>

<hr>

<a href="/words/<%= @word.id %>">Back to the word</a>

